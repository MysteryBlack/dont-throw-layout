@import 'nib'

#want_group
  width: 100%
  .turntable
    width: 70%
    display: block
    position: absolute
    left: 50%
    top: 7px
    margin-left: -35%
    img
      border: none
      width: 100%
    .shadow, .heart
      width: 100%
      height: 100%
      position: absolute
      left: 0
      top: 0
      background-position: center center
      background-size: cover
      background-repeat: no-repeat
    .pointer
      width: 16%
      position: absolute
      left: 50%
      top: -7px
      margin-left: -8%
    .shadow
      background-image: url('../images/want_group_turntable_shadow.png')
    .heart
      background-image: url('../images/want_group_turntable.png')
      transform: rotate(0deg)
      transition: 400ms cubic-bezier(0.600, 0.040, 0.980, 0.335) all
    &.active-group-b .heart
      transform: rotate(-90deg)
    &.active-group-c .heart
      transform: rotate(90deg)
    &.active-group-d .heart
      transform: rotate(180deg)
    .text
      position: absolute
      left: 50%
      top: 50%
      width: 40%
      height: 40%
      margin-left: -20%
      margin-top: -20%
      background-position: center center
      background-size: cover
      background-repeat: no-repeat
      transition: 400ms cubic-bezier(0.600, 0.040, 0.980, 0.335) all
      transform: rotate(-45deg)
      &.text-a
        background-image: url('../images/want_group_text_a.png')
      &.text-b
        background-image: url('../images/want_group_text_b.png')
      &.text-c
        background-image: url('../images/want_group_text_c.png')
      &.text-d
        background-image: url('../images/want_group_text_d.png')
    &.active-group-b .text
      transform: rotate(45deg)
    &.active-group-c .text
      transform: rotate(-135deg)
    &.active-group-d .text
      transform: rotate(-225deg)
    .group
      width: 50%
      height: 50%
      position: absolute
      left: 0
      top: 0
      transform: rotate(45deg)
      &.group-a
        left: 25%
      &.group-b
        top: 25%
        left: 50%
      &.group-c
        top: 25%
      &.group-d
        top: 50%
        left: 25%