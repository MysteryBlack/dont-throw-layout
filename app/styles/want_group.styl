@import 'nib'

#want_group
  width: 100%
  .turntable
    width: 70%
    display: block
    position: absolute
    left: 50%
    top: 10%
    margin-left: -35%
    img
      border: none
      width: 100%
    .runrun
      position: absolute
      left: 0px
      top: 0px
      width: 100%
      height: 100%
      transform: rotate(0deg)
      transition: 400ms cubic-bezier(0.600, 0.040, 0.980, 0.335) all
    &.active-group-b .runrun
      transform: rotate(-90deg)
    &.active-group-c .runrun
      transform: rotate(90deg)
    &.active-group-d .runrun
      transform: rotate(180deg)
    .group
      width: 50%
      height: 50%
      position: absolute
      left: 0
      top: 0
      transform: rotate(45deg)
      &.group-a
        left: 25%
      &.group-b
        top: 25%
        left: 50%
      &.group-c
        top: 25%
      &.group-d
        top: 50%
        left: 25%