@import 'nib'

#want_group
  width: 100%
  .turntable
    width: 70%
    display: block
    position: relative
    transition: 400ms cubic-bezier(0.600, 0.040, 0.980, 0.335) all
    transform: rotate(45deg)
    position: absolute
    left: 50%
    top: 20%
    margin-left: -35%
    &.active-group-b
      transform: rotate(-45deg)
    &.active-group-c
      transform: rotate(135deg)
    &.active-group-d
      transform: rotate(225deg)
    img
      border: none
      width: 100%
    .group
      width: 50%
      height: 50%
      position: absolute
      left: 0
      top: 0
      &.group-a
        background: #F00
      &.group-b
        background: #0F0
        left: 50%
      &.group-c
        background: #00F
        top: 50%
      &.group-d
        background: #000
        top: 50%
        left: 50%