@import 'nib'

#want_detail
  background-image: url('../images/want_list_bg.png')
  background-size: contain
  .tag
    position: relative
    width: 20%
    margin-left: 4%
    display: inline-block
    img
      width: 100%
    .photo
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      overflow: hidden
      .wrap-img, img
        position: absolute
        width: 600px
        height: 600px
        top: 0
        left: 0
      .wrap-img
        margin-left: 50%
        margin-top: 50%
  .tags
    width: 100%
  .map
    width: 96%
    margin: 0 auto
    img
      width: 100%
  .submit
    width: 50%
    display: block
    margin: 0 auto
    img
      width: 100%