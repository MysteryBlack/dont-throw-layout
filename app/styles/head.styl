@import 'nib'

#head
  position: fixed
  left: 0
  top: 0
  z-index: 10
  height: 25mm
  width: 100%
  background-image: url('../images/head_bg.png')
  background-size: contain
  box-shadow:0px 8px 8px rgba(0%,0%,0%,0.7)
  a
    display: block
    img
      height: 100%
    &.break, &.more
      position: absolute
      cursor: pointer
    &.break
      left: 6mm
      top: 10mm
      height: 10mm
    &.more
      right: 6mm
      top: 11mm
      height: 9mm
